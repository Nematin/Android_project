<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="4dp"/>

            <gradient
                android:angle="270"
                android:centerColor="#00000000"
                android:centerY="0.9"
                android:endColor="#10000000"
                android:startColor="#FF00574B"
                android:type="linear" />

            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:right="1dp" android:left="1dp" android:bottom="100dp">
        <shape>
            <solid android:color="@color/white"/>
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp"/>
            <stroke
                android:color="@color/primaryDark"
                android:width="1dp"
                />
            <corners
                android:radius="10dp"/>
        </shape>
    </item>




</layer-list>